@page
@model TestAssignment.Pages.Details
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            margin: 0;
        }

        th, td {
            padding: 4px;
            text-align: left;
            border: none;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        a {
            color: #0000FF;
            text-decoration: none;
        }

        .compact-table-container {
            width: fit-content;
            float: left;
        }
    </style>
    <div class="container">
        <h1>Edit Company</h1>
        <form asp-page="Details" method="post">
            <div class="form-group">
                <input asp-for="@Model.Company.Id" hidden type="text" class="form-control" id="name" value="@Model.Company.Id">
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                <input asp-for="@Model.Company.Name" type="text" class="form-control" id="name" value="@Model.Company.Name">
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                <input asp-for="@Model.Company.City" type="text" class="form-control" id="city" value="@Model.Company.City">
            </div>
            <div class="form-group">
                <label for="state">State:</label>
                <input asp-for="@Model.Company.State" type="text" class="form-control" value="@Model.Company.State" id="state">
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input asp-for="@Model.Company.Phone" type="text" class="form-control" value="@Model.Company.Phone" id="phone">
            </div>
            <button type="submit"  class="btn btn-primary">Save</button>
        </form>
    </div>
    <div style="margin-top: 50px" class="container">
        <span style="font-size: 20px">
            Employee
        </span>
      
        <table>
            <thead>
                <tr>
                    <th>№</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Position</th>
                    <th>BirhDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td><a href="/EditCompany?id=@employee.Id">@employee.FirstName</a></td>
                        <td>@employee.LastName</td>
                        <td>@employee.Position</td>
                        <td>@employee.BithDate</td>
                    </tr>
                }
            </tbody>
            </table>
         </div>

</body>

</html>