@page
@model IndexModel
@{
    ViewData["Title"] = "Company";
}

<!DOCTYPE html>
<html>

<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
        .compact-table-container {
            width: fit-content;
            float: left;
        }

        .compact-table-container2 {
            width: fit-content;
            float: right;
        }

        .table1 {
            border-collapse: collapse;
            border-spacing: 0;
            margin: 0;
            table-layout: fixed;
            width: 500px; /* Измените значение на нужную вам ширину */
        }

        .table2 {
            border-collapse: collapse;
            border-spacing: 0;
            margin: 0;
            table-layout: fixed;
            width: 500px; /* Измените значение на нужную вам ширину */
        }

        th, td {
            padding: 10px 4px;
            text-align: left;
            border: none;
            border-bottom: 1px solid #ccc;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        a {
            color: #0000FF;
            text-decoration: none;
        }

        .modal {
            display: flex;
            position: fixed;
            z-index: 10;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: white;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
        }

        .close {
            float: right;
            cursor: pointer;
        }

            .close:hover {
                color: red;
            }
    </style>
</head>
<body>
    <div style="z-index: 10" id="myCustomModal" class="modal">
        <div class="modal-content">
            <span class="close">x</span>
            <h3>Модальное окно</h3>
            <p>
                <h1>
                    123edasqd1edsa
                </h1>
            </p>
        </div>
    </div>
    <div class="compact-table-container">
        <button style="border-radius:20px" icon="plus">Добавить компанию</button>
        <table class="table1">

            <thead>
                <tr>
                    <th>№</th>
                    <th>Company</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.CompanyModel)
                {
                    <tr>
                        <td>@company.Id</td>
                        <td><a href="/Details?id=@company.Id">@company.Name</a></td>
                        <td>@company.City</td>
                        <td>@company.State</td>
                        <td>@company.Phone</td>
                    </tr>
                }
            </tbody>

            <!-- Добавьте остальные строки таблицы -->
        </table>
    </div>
    <div class="compact-table-container2">
        <button style="border-radius:20px" id="addEmployee" icon="plus">Добавить сотрудника</button>
        <table class="table2">
            <thead>
                <tr>
                    <th>№</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Position</th>
                    <th>BirhDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td><a href="/EditCompany?id=@employee.Id">@employee.FirstName</a></td>
                        <td>@employee.LastName</td>
                        <td>@employee.Position</td>
                        <td>@employee.BithDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#addEmployee').click(function (e) {
                e.preventDefault();
                $('#myCustomModal').modal('show');
            });
        });
    </script>
</body>
</html>

